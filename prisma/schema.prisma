generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  color     String     @default("#6366f1")
  createdAt DateTime   @default(now())
  schedules Schedule[]
}

model Subject {
  id           String        @id @default(uuid())
  name         String
  color        String        @default("#60a5fa")
  type         String        @default("MAIN")
  createdAt    DateTime      @default(now())
  schedules    Schedule[]
  yearSubjects YearSubject[]
}

model YearGroup {
  id           String        @id @default(uuid())
  name         String        @unique
  createdAt    DateTime      @default(now())
  schedules    Schedule[]
  yearSubjects YearSubject[]
}

model YearSubject {
  id          String    @id @default(uuid())
  yearGroupId String
  subjectId   String
  subject     Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  yearGroup   YearGroup @relation(fields: [yearGroupId], references: [id], onDelete: Cascade)

  @@unique([yearGroupId, subjectId])
}

model Schedule {
  id               String            @id @default(uuid())
  teacherId        String
  subjectId        String
  yearGroupId      String?
  dayOfWeek        Int
  startTime        String
  endTime          String
  createdAt        DateTime          @default(now())
  yearGroup        YearGroup?        @relation(fields: [yearGroupId], references: [id], onDelete: Cascade)
  subject          Subject           @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher          Teacher           @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  studentSchedules StudentSchedule[]
}

model Student {
  id        String            @id @default(uuid())
  name      String
  createdAt DateTime          @default(now())
  schedules StudentSchedule[]
}

model StudentSchedule {
  id         String   @id @default(uuid())
  studentId  String
  scheduleId String
  schedule   Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  student    Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, scheduleId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("LSA")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
